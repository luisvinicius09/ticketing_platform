<p id="notice"><%= notice %></p>

<% if user_signed_in?%>
  <%= link_to 'New Event', new_event_path, class: 'new-event' %>
<% end %>

<br/ >
<hr style="position: relative; top: 5px;"/>
<h2>Previous Events</h2>
<div class="grid">
  <% @prev_events.each do |event|%>
    <%= render event %>
  <% end %>
</div>
<h2>Upcoming Events</h2>
<div class="grid">
  <% @next_events.each do |event|%>
    <%= render event %>
  <% end %>
</div>