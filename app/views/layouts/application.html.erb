<!DOCTYPE html>
<html>
  <head>
    <title>TicketingPlatform</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="notification">
        <p class="notice"><%= notice %></p>
      </div>
      <% end %>
    <% if flash[:alert] %>
      <div class="notification">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>
    <div>
      <%= link_to 'Home', root_path, class: 'button' %>
      <% if user_signed_in? %>
        <div>
          <%= link_to 'Profile', edit_user_registration_path, class: 'button' %>
        </div>
        <div>
          <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'button' %>
        </div>
      <% else %>
        <div>
          <%= link_to 'Sign Up', new_user_registration_path, class: 'button' %>
        </div>
        <div>
          <%= link_to 'Sign In', new_user_session_path, class: 'button' %>
        </div>
      <% end %>
    </div>

    <%= yield %>
  </body>
</html>
